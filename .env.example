# Conversational Commerce Chatbot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required: API Configuration
# =============================================================================

# OpenRouter API key (get one at https://openrouter.ai/keys)
OPENAI_API_KEY=your_openrouter_api_key_here

# =============================================================================
# Optional: API Endpoints
# =============================================================================

# API base URL (default: OpenRouter)
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Chat model for conversational responses
CHAT_MODEL=openai/gpt-4o-mini

# Embedding model for product vector embeddings
EMBEDDING_MODEL=openai/text-embedding-3-small

# =============================================================================
# Optional: Storage Paths
# =============================================================================

# Path for ChromaDB vector store persistence
VECTOR_STORE_PATH=./vector_store

# Path for products JSON catalog
PRODUCTS_PATH=./data/products.json

# Path for SQLite orders database
DATABASE_PATH=./db/orders.db
